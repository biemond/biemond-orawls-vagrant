connect('<%= weblogicUser %>','<%= weblogicPassword %>'  ,'<%= weblogicConnectUrl %>')

def quote(text):
    if text:
        return "\"" + str(text).replace("\"", "\"\"") + "\""
    else: 
        return ""

m = ls('/SystemResources')

f = open("/tmp/wlstScript.out", "w")
print >>f, "name;target;targettype"
for token in m.split("dr--"):
    token=token.strip().lstrip().rstrip()
    if token:
        print '_jmsmodule_'+token+'___'
        cd('/SystemResources/'+token)

        n = ls('SubDeployments')
        for token2 in n.split("dr--"):
            token2=token2.strip().lstrip().rstrip()
            if not token2 == '':
                #cd('/SystemResources/'+token+'/SubDeployments/'+token2)

                m = ls('/SystemResources/'+token+'/SubDeployments/'+token2+'/Targets')
                target     = []
                targetType = []
                for token3 in m.split("dr--"):
                    token3=token3.strip().lstrip().rstrip()
                    if not token3 == '':
                       target.append(token3)
                       cd('/SystemResources/'+token+'/SubDeployments/'+token2+'/Targets/'+token3)
                       targetType.append(get('Type'))

                print >>f, ";".join(map(quote, [token+":"+token2,','.join(target),','.join(targetType)]))
        
f.close()

disconnect()
exit()
